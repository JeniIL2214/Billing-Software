<odoo>
    <record id="view_sale_order_qr_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.qr.wizard.form</field>
        <field name="model">sale.order.qr.wizard</field>
        <field name="arch" type="xml">
            <form string="QR Code">
                <group>
                    <field name="qr_image" widget="image" class="oe_avatar"/>
                    <field name="total_amount"/>
                </group>
                <footer>
                    <button string="Close" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
